        function createEquityChart(results) {
            // Destroy previous chart if exists
            if (equityChart) {
                equityChart.destroy();
            }
            
            if (!results.trades || results.trades.length === 0) {
                return;
            }
            
            // Prepare data
            const labels = ['Start'];
            const equityData = [results.startBalance];
            const drawdownData = [0];
            
            let peakBalance = results.startBalance;
            
            results.trades.forEach((trade, index) => {
                labels.push(`Trade ${index + 1}`);
                equityData.push(trade.balanceAfter);
                
                // Calculate drawdown
                if (trade.balanceAfter > peakBalance) {
                    peakBalance = trade.balanceAfter;
                }
                const drawdown = ((peakBalance - trade.balanceAfter) / peakBalance) * 100;
                drawdownData.push(-drawdown); // Negative for visual representation
            });
            
            const ctx = document.getElementById('equityChart').getContext('2d');
            
            equityChart = new Chart(ctx, {
                type: 'line',
                data: {
                    labels: labels,
                    datasets: [
                        {
                            label: 'Equity Curve',
                            data: equityData,
                            borderColor: '#4CAF50',
                            backgroundColor: 'rgba(76, 175, 80, 0.1)',
                            borderWidth: 2,
                            fill: true,
                            tension: 0.4,
                            yAxisID: 'y',
                            pointRadius: 0,
                            pointHoverRadius: 5
                        },
                        {
                            label: 'Drawdown %',
                            data: drawdownData,
                            borderColor: '#f44336',
                            backgroundColor: 'rgba(244, 67, 54, 0.1)',
                            borderWidth: 2,
                            fill: true,
                            tension: 0.4,
                            yAxisID: 'y1',
                            pointRadius: 0,
                            pointHoverRadius: 5
                        }
                    ]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: true,
                    interaction: {
                        mode: 'index',
                        intersect: false,
                    },
                    plugins: {
                        title: {
                            display: true,
                            text: 'Account Balance & Drawdown Over Time',
                            font: {
                                size: 16,
                                weight: 'bold'
                            }
                        },
                        legend: {
                            display: true,
                            position: 'top',
                        },
                        tooltip: {
                            callbacks: {
                                label: function(context) {
                                    let label = context.dataset.label || '';
                                    if (label) {
                                        label += ': ';
                                    }
                                    if (context.parsed.y !== null) {
                                        if (context.datasetIndex === 0) {
                                            label += '$' + context.parsed.y.toFixed(2);
                                        } else {
                                            label += context.parsed.y.toFixed(2) + '%';
                                        }
                                    }
                                    return label;
                                }
                            }
                        }
                    },
                    scales: {
                        x: {
                            display: true,
                            title: {
                                display: true,
                                text: 'Trade Number'
                            },
                            ticks: {
                                maxTicksLimit: 20
                            }
                        },
                        y: {
                            type: 'linear',
                            display: true,
                            position: 'left',
                            title: {
                                display: true,
                                text: 'Account Balance ($)',
                                color: '#4CAF50'
                            },
                            ticks: {
                                callback: function(value) {
                                    return '$' + value.toFixed(0);
                                },
                                color: '#4CAF50'
                            },
                            grid: {
                                color: 'rgba(0, 0, 0, 0.05)'
                            }
                        },
                        y1: {
                            type: 'linear',
                            display: true,
                            position: 'right',
                            title: {
                                display: true,
                                text: 'Drawdown (%)',
                                color: '#f44336'
                            },
                            ticks: {
                                callback: function(value) {
                                    return value.toFixed(1) + '%';
                                },
                                color: '#f44336'
                            },
