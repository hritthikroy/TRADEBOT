        let tradingChart = null;
        
        async function createTradingSignalsChart(results) {
            // Destroy previous chart if exists
            if (tradingChart) {
                tradingChart.remove();
                tradingChart = null;
            }
            
            if (!results.trades || results.trades.length === 0) {
                return;
            }
            
            // Fetch historical price data for the symbol
            const symbol = document.getElementById('symbol').value;
            const interval = document.getElementById('interval').value;
            const days = parseInt(document.getElementById('days').value);
            
            try {
                // Fetch candlestick data from Binance
                const endTime = Date.now();
                const startTime = endTime - (days * 24 * 60 * 60 * 1000);
                const response = await fetch(`https://api.binance.com/api/v3/klines?symbol=${symbol}&interval=${interval}&startTime=${startTime}&endTime=${endTime}&limit=1000`);
                
                if (!response.ok) {
                    console.error('Failed to fetch price data');
                    return;
                }
                
                const klines = await response.json();
                
                // Prepare candlestick data for lightweight-charts
                const candlestickData = klines.map(k => ({
                    time: Math.floor(k[0] / 1000), // Convert to seconds
                    open: parseFloat(k[1]),
                    high: parseFloat(k[2]),
                    low: parseFloat(k[3]),
                    close: parseFloat(k[4])
                }));
                
                // Create the chart
                const chartContainer = document.getElementById('tradingChart');
                chartContainer.innerHTML = ''; // Clear previous content
                
                // Wait for library to load if needed
                let attempts = 0;
                while (typeof LightweightCharts === 'undefined' && attempts < 10) {
                    await new Promise(resolve => setTimeout(resolve, 100));
                    attempts++;
                }
                
                if (typeof LightweightCharts === 'undefined') {
                    console.error('LightweightCharts library not loaded after waiting');
                    chartContainer.innerHTML = '<p style="color: #f44336; padding: 20px; text-align: center;">‚ùå Chart library failed to load. Please refresh the page.</p>';
                    return;
                }
                
                tradingChart = LightweightCharts.createChart(chartContainer, {
                    width: chartContainer.clientWidth,
                    height: 500,
                    layout: {
                        background: { color: '#ffffff' },
                        textColor: '#333',
                    },
                    grid: {
                        vertLines: { color: '#f0f0f0' },
                        horzLines: { color: '#f0f0f0' },
                    },
                    crosshair: {
                        mode: LightweightCharts.CrosshairMode.Normal,
                    },
                    rightPriceScale: {
                        borderColor: '#cccccc',
                    },
                    timeScale: {
                        borderColor: '#cccccc',
                        timeVisible: true,
                        secondsVisible: false,
                    },
                });
                
                // Add candlestick series
                const candlestickSeries = tradingChart.addCandlestickSeries({
                    upColor: '#26a69a',
                    downColor: '#ef5350',
                    borderVisible: false,
                    wickUpColor: '#26a69a',
                    wickDownColor: '#ef5350',
                });
                
                candlestickSeries.setData(candlestickData);
                
                // Prepare markers for buy/sell signals
                const markers = [];
                
                results.trades.forEach((trade, index) => {
                    // Find closest candlestick for entry
                    const entryIndex = Math.floor((index / results.trades.length) * candlestickData.length);
                    const entryTime = candlestickData[entryIndex]?.time;
                    
                    if (!entryTime) return;
                    
                    // Add entry marker
                    if (trade.type === 'LONG') {
                        markers.push({
                            time: entryTime,
                            position: 'belowBar',
                            color: '#4CAF50',
                            shape: 'arrowUp',
                            text: `Buy #${index + 1} @ $${trade.entry.toFixed(2)}`
                        });
                    } else {
                        markers.push({
                            time: entryTime,
                            position: 'aboveBar',
                            color: '#f44336',
                            shape: 'arrowDown',
                            text: `Sell #${index + 1} @ $${trade.entry.toFixed(2)}`
                        });
                    }
                    
                    // Add exit marker
                    const exitIndex = Math.min(
                        entryIndex + Math.floor(candlestickData.length / results.trades.length),
                        candlestickData.length - 1
                    );
                    const exitTime = candlestickData[exitIndex]?.time;
                    
                    if (exitTime) {
                        const profitColor = trade.profit >= 0 ? '#4CAF50' : '#f44336';
                        const profitSign = trade.profit >= 0 ? '+' : '';
                        markers.push({
                            time: exitTime,
                            position: trade.profit >= 0 ? 'aboveBar' : 'belowBar',
                            color: '#FF9800',
                            shape: 'circle',
                            text: `Exit: ${profitSign}$${trade.profit.toFixed(2)} (${profitSign}${trade.profitPercent.toFixed(1)}%)`
                        });
                    }
                });
                
                // Set markers on the series
                candlestickSeries.setMarkers(markers);
                
                // Fit content to view
                tradingChart.timeScale().fitContent();
                
                // Handle window resize
                window.addEventListener('resize', () => {
                    if (tradingChart) {
                        tradingChart.applyOptions({
                            width: chartContainer.clientWidth
                        });
                    }
                });
                
            } catch (error) {
                console.error('Error creating trading signals chart:', error);
            }
        }
        
        async function exportCSV() {
            const symbol = document.getElementById('symbol').value;
            const interval = document.getElementById('interval').value;
            const days = parseInt(document.getElementById('days').value);
            const balance = parseFloat(document.getElementById('balance').value);
            const risk = parseFloat(document.getElementById('risk').value) / 100;
            
            showStatus('Generating CSV...', 'info');
            
            try {
                const response = await fetch(`${API_URL}/backtest/export`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({
                        symbol,
                        interval,
                        days,
                        startBalance: balance,
                        riskPercent: risk
                    })
                });
                
                if (!response.ok) {
                    throw new Error('Export failed');
                }
                
                const blob = await response.blob();
                const url = window.URL.createObjectURL(blob);
                const a = document.createElement('a');
                a.href = url;
                a.download = `backtest_${symbol}_${days}d_${Date.now()}.csv`;
                document.body.appendChild(a);
                a.click();
                window.URL.revokeObjectURL(url);
                document.body.removeChild(a);
                
                showStatus('CSV exported successfully!', 'success');
                
            } catch (error) {
                showStatus('Error: ' + error.message, 'error');
                console.error('Export error:', error);
            }
        }
